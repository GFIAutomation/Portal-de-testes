@model IEnumerable<gfi_test_landing.Models.RoleProjectByUserModel>

<link href="~/Content/css/lib/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="card-body">
                <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="col-sm-12">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
                            <thead>
                                <tr>
                                    <th>@Html.Label("Project Name")</th>
                                    <th>@Html.Label("Project Description")</th>
                                    <th>@Html.Label("Role Name")</th>


                                    <th style="display:none"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.NameProject)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.DescriptionProject)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.NameRole)
                                        </td>
                                        <td>
                                                @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                            </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Content/TableJS")

