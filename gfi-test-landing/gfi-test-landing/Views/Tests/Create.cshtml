@model gfi_test_landing.Test

@{
    ViewBag.Title = "Create";
}

<h2>Create Test</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Name:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Descripiton:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>        
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Project Name:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.DropDownList("id_project", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_project, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("Broswer:")
                </div>
            </div>
            <div class="row">
                <div class="col-md-11">
                    @Html.EditorFor(model => model.broswer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.broswer, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <button class="btn btn-danger"> @Html.ActionLink("Cancel", "Index")</button>
                </div>
            </div>
        </div>
    </div>
}
