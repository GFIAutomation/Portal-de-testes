@model IEnumerable<gfi_test_landing.Test>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/css/lib/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />
<h2>All Tests</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="card-body">
                <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
                    <div class="col-sm-12">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.Label("Name:")
                                    </th>
                                    <th>
                                        @Html.Label("Description:")
                                    </th>
                                    <th>
                                        @Html.Label("Creation Date:")
                                    </th>
                                    <th>
                                        @Html.Label("Broswer:")
                                    </th>
                                    <th>
                                        @Html.Label("Project Name:")
                                    </th>
                                    <th style="display:none"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.creation_date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.broswer)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project.name)
                                        </td>
                                        <td>
                                            <div>
                                                @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "fa fa-edit" }) |
                                                @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "fa fa-trash-o" }) |
                                                @Html.ActionLink(" ", "Run", new { id = item.id }, new { @class = "fa fa-arrow-right" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/js/lib/data-table/datatables.min.js"></script>
<script src="~/Content/js/lib/data-table/dataTables.bootstrap.min.js"></script>
<script src="~/Content/js/lib/data-table/dataTables.buttons.min.js"></script>
<script src="~/Content/js/lib/data-table/buttons.bootstrap.min.js"></script>
<script src="~/Content/js/lib/data-table/jszip.min.js"></script>
<script src="~/Content/js/lib/data-table/pdfmake.min.js"></script>
<script src="~/Content/js/lib/data-table/vfs_fonts.js"></script>
<script src="~/Content/js/lib/data-table/buttons.html5.min.js"></script>
<script src="~/Content/js/lib/data-table/buttons.print.min.js"></script>
<script src="~/Content/js/lib/data-table/buttons.colVis.min.js"></script>
<script src="~/Content/js/lib/data-table/datatables-init.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>
